<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddArticleActivity"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/rectangle_navbar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/ToolbarProfile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imageBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_chevron_left"
                    android:contentDescription="@string/back_in_the_page" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/add_new_blog_here"
                android:textColor="@color/text_color_blue"
                android:textSize="27sp"
                android:fontFamily="@font/adlam_display"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/add_image"
                android:textColor="@color/text_color"
                android:textSize="20sp"
                android:fontFamily="@font/adlam_display"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/select_image_blog"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="350dp"
                    android:layout_height="250dp">
                    <ImageView
                        android:id="@+id/imageView_blog"
                        android:layout_width="350dp"
                        android:layout_height="250dp"
                        android:contentDescription="TODO"
                        android:src="@drawable/ic_add_image"
                        tools:ignore="ContentDescription,HardcodedText" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/blog_title"
                android:textColor="@color/text_color"
                android:textSize="20sp"
                android:fontFamily="@font/adlam_display"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etTxt_blog_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_background_blue"
                android:ems="10"
                android:fontFamily="@font/adlam_display"
                android:hint="@string/please_start_writing_better_git_commits"
                android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
                android:nestedScrollingEnabled="true"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:minLines="3"
                android:maxLines="8"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textColorLink="@color/text_color_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/blog_description"
                android:textColor="@color/text_color"
                android:textSize="20sp"
                android:fontFamily="@font/adlam_display"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etTxt_blog_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:fontFamily="@font/adlam_display"
                android:hint="@string/please_start_writing_better_git_commits"
                android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:minLines="5"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textColorLink="@color/text_color_blue" />

            <ProgressBar
                android:id="@+id/add_article_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/text_color_red"
                android:visibility="invisible" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add_blog"
                style="@style/button_add_blogs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_full_blue"
                android:text="@string/add_blog"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                tools:ignore="TextContrastCheck,VisualLintButtonSize" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>